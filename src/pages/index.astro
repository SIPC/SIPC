---
import Profile from "../cards/profile.astro";
import Links from "../cards/links.astro";
import Footer from "../cards/footer.astro";
import About from "../cards/about.astro";
import Time from "../cards/time.astro";
import Skills from "../cards/skills.astro";
import Projects from "../cards/projects.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="stylesheet" crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/misans@4.1.0/lib/Normal/MiSans-Medium.min.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>sipc.ink</title>
  </head>
<body>
  <main style="min-height: 100vh; width: 100%; display: flex; align-items: center; justify-content: center; padding: 16px;">
    <div class="outer-grid" style="max-width: 640px; width: 100%; display: grid; gap: 8px;">
      
      <!-- Column 1 -->
      <div style="display: flex; flex-direction: column; gap: 8px;">
        <Profile />
        <div style="flex: 1;">
          <Skills />
        </div>
        <Links />
      </div>

      <!-- Column 2 & 3 Wrapper -->
      <div style="display: flex; flex-direction: column; gap: 8px;">
        <div class="inner-grid" style="display: grid; gap: 8px; flex: 1;">
          <!-- Middle Column -->
          <div style="display: flex; flex-direction: column; gap: 8px;">
            <div style="flex: 1;">
              <About />
            </div>
            <div>
              <Time />
            </div>
          </div>
          <!-- Right Column -->
          <div style="height: 100%;">
            <Projects />
          </div>
        </div>
        
        <!-- Footer -->
        <Footer />
      </div>

    </div>
  </main>
</body>

<style>
  body {
    font-family: 'MiSans', -apple-system, BlinkMacSystemFont, sans-serif;
    background: #0f0f0f;
    color: #ffffff;
    margin: 0;
    padding: 0;
  }
  .outer-grid {
    grid-template-columns: 1fr;
  }
  .inner-grid {
    grid-template-columns: 1fr;
  }
  @media (min-width: 768px) {
    .outer-grid {
      grid-template-columns: 1fr 2fr;
    }
    
    .inner-grid {
      grid-template-columns: 1.3fr 1fr;
    }
  }
</style>


</html>
